{{>adminnav}}
<div class="admin-body">
    {{>slider}}
    <div class="admin-right">
        <div class="container d-flex mt-5 mx-5">
            <table class=" table table-dark w-50">
                <thead>
                    <tr>
                       
                        <th scope="col">NAME</th>
                        <th scope="col">USER NAME</th>
                        <th scope="col">ADDRESS</th>
                        <th scope="col">DETAILS</th>
                        <th scope="col">STATUS</th>

                    </tr>
                </thead>
                <tbody>

                    <form id="formData" method="post" action="/admin/userData">
                        {{#each arrData}}
                        {{!-- {{#if (payed this.status)}} --}}
                        <tr>
                         
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{#each this.products}}<P></P>{{ this.name}}</P>{{/each}}</td>
                            <td>{{#each this.products}}<P></P>{{ this.quantity}}</P>{{/each}}</td>
                            <td>{{#each this.products}}<P></P>{{ this.price}}</P>{{/each}}</td>
                            <td>{{#each this.products}}<P></P>{{ this.total_price}}</P>{{/each}}</td>
                          


                        </tr>
                        {{!-- {{/if}} --}}
                        {{/each}}
                    </form>



                </tbody>
            </table>
        </div>


    </div>
</div>