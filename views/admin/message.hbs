
<div class="admin-body">
    <h2 >M PACK</h2>
    {{>slider}}
    <div class="admin-right">
        <div class="admin-message">
            <h3 class="f-5" style="text-align:center">MESSAGE</h3>
            <div class="container mt-5 d-flex justify-content-center">

                <table class="table  w-100">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">NAME</th>
                            <th scope="col">EMAIL</th>
                            <th scope="col">PRODUCT</th>
                            <th scope="col">QUANTITY</th>
                            <th scope="col">MESSAGE</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each msg}}
                        <form id="formData" method="post" action="/admin/userData">
                            <tr>
                                <th scope="row">{{plus @index}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.product}}</td>
                                <td>{{this.quantity}}</td>
                                <td>{{this.message}}</td>


                            </tr>
                        </form>
                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

