
<div class="admin-body">
    <h2>M PACK</h2>
    {{>slider}}
    <div class="admin-right">
        <div class="Admin-userdata">
            <h3 class="f-5" style="text-align:center">User Data</h3>
        <div class="container mt-5 d-flex justify-content-center">

            <table class="table w-50">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">NAME</th>
                        <th scope="col">USER NAME</th>
                        <th scope="col">ID</th>
                         <th scope="col">STATUS</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each arr}}
                    <form id="formData" method="post" action="/admin/userData">
                        <tr>
                            <th scope="row">{{plus @index}}</th>
                            <td>{{this.name1}}{{this.name2}}</td>
                            <td>{{this.username}}</td>
                            <td>{{this._id}}</td>
                           <td><button type="submit" class="btn btn-danger">Block</button></td> 
                            

                        </tr>
                    </form>
                     {{/each}}
           

                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>