                    <th scope="row" style="width: 14rem;">{{this.email}}</th>

                    {{#if this.products}}<th scope="row" style="width: 14rem;">{{#each this.products}}<P>{{ this.name}}
                        </P>{{/each}}</th> {{/if}}
                    <th scope="row" style="width: 14rem;">{{#each this.products}}{{#if this.price}}<P>â‚¹{{ this.price}}
                        </P>{{/if}}{{/each}}</th>
