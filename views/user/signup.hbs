<script>
  let data = {}
  document.querySelector('#otpBtn').addEventListener('click', (e) => {
    e.preventDefault()
    e.target.innerHTML = "Sending.."
    e.target.classList.toggle("disabled", true)
    let email = document.querySelector('input[name=email]').value
    console.log(email)
    if (e.target.getAttribute('id') == 'otpBtn') {
      fetch('/login/signup/otp', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ email: email }) }).then(response => {
        return response.json()
      }).then(res => {
        e.target.classList.toggle("disabled", false)
        e.target.innerHTML = "Verify"
        e.target.removeAttribute('id')
        e.target.setAttribute("id", "verify")
        data = {
          otp: res
        }



      })

    } else if (e.target.getAttribute("id") == "verify") {
      let otp = document.querySelector('input[name="otp"]').value

      e.target.innerHTML = "Verifying..";
      e.target.classList.toggle("disabled", true);
      if (otp == data.otp) {
        document.getElementById('email').readOnly=true
        e.target.innerHTML = "Verified";

        document.querySelector('#sign').classList.toggle('disabled', false)

      } else {
        e.target.classList.toggle("disabled", false);
        e.target.innerHTML = "Send OTP";
        e.target.setAttribute("id", "otpBtn")

      }

    }



  })


</script>

<script>
  let error = document.querySelector('#error')
  let sign = document.querySelector('#sign');

  document.querySelector('#sign').addEventListener('click', (e) => {
    e.preventDefault()

    let password = document.querySelector('#pass').value;
    let confirmPass = document.querySelector('#conPass').value;




    if (password == confirmPass) {
      error.innerHTML = ""
      document.querySelector('#signUp').submit()


    }
    else {
      error.innerHTML = "Not Mach"



    }
  })




</script>